<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="card mx-auto" style="max-width: 600px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="card-header text-center" style="background-color: #271491; color: white; border-radius: 12px 12px 0 0;">
      <h2>Perfil da Empresa Júnior</h2>
    </div>
    <div class="card-body text-center">
      <!-- Foto de Perfil -->
      <div class="mb-4">
        <img src="/img/default-profile.png" alt="Foto de Perfil Padrão" class="rounded-circle">
        <form action="/perfil/upload" method="POST" enctype="multipart/form-data" class="mt-3">
          <label for="FotoPerfil" class="form-label">Alterar Foto de Perfil:</label>
          <input type="file" name="FotoPerfil" id="FotoPerfil" accept="image/*" class="form-control mb-3" style="border-radius: 10px;">
          <button type="submit" class="btn btn-primary mt-2" style="border-radius: 10px;">Enviar</button>
        </form>
      </div>

      <!-- Informações da EJ -->
      <h3 class="mt-3" style="font-family: 'Sora', sans-serif; font-size: 1.7rem; color: #343a40; font-weight: 600;"><%= ej.nome %></h3>
    </div>
  </div>
</div>

<style>
/* Body com display flex para garantir que o footer fique no final */
body {
  margin: 0;
  padding: 0;
  font-family: 'Sora', sans-serif;
  display: flex;
  flex-direction: column;
  min-height: 100vh; /* Garante que a página ocupe a altura total */
  background-color: #f1f7fc;
}

/* A seção principal do conteúdo vai ocupar o espaço restante */
.container {
  flex-grow: 1;
  padding: 20px;
}

.card {
  margin-top: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Footer sempre no final da página */
footer {
  margin-top: auto;
  background-color: #343a40;
  color: white;
  padding: 20px 0;
  text-align: center;
}

footer a {
  color: white;
  text-decoration: none;
}

footer a:hover {
  color: #d9043d;
}

/* Estilos adicionais para a página de perfil */
.card-header h2 {
  font-family: 'Sora', sans-serif;
  font-size: 1.8rem;
  color: #fff;
  font-weight: 600;
}

.card-body img {
  width: 150px;
  height: 150px;
  object-fit: cover;
  border-radius: 50%;
}

.form-label {
  font-family: 'Sora', sans-serif;
  color: #271491;
  font-size: 1.4rem;
  font-weight: 500;
}

.btn-primary {
  background-color: #d9043d;
  border-color: #d9043d;
  border-radius: 10px;
  padding: 10px 20px;
  font-size: 1rem;
  font-weight: 600;
  transition: background-color 0.3s ease, border-color 0.3s ease;
}

.btn-primary:hover {
  background-color: #004085;
  border-color: #003366;
}
/* Tamanho e estilo das informações da empresa */
h3 {
  font-family: 'Sora', sans-serif;
  color: #343a40;
  font-size: 1.7rem;
  font-weight: 600;
}

/* Estilos para os campos de entrada */
.form-control {
  border-radius: 10px;
  font-size: 1rem;
  padding: 30px;
  border: 1px solid #ddd;
  margin-top: 10px;
}

.form-control:focus {

  border-color: #d9043d;
  box-shadow: 0 0 5px rgba(217, 4, 61, 0.3);
}

/* Estilo do botão de enviar */
.btn-primary {
  width: 20%;
  font-size: 1rem;
}
</style>

<%- include('../partials/footer') %>
